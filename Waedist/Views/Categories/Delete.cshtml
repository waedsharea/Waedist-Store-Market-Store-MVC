@model Waedist.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}


<h3 class="text-danger">Are you sure you want to delete this Category?</h3>
<div>
    
    <hr />
    <dl class="row">
      
        <dd style="font-size:larger; font-weight:bold" class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoryname)
        </dd>
       
        <dd class="col-sm-10">
            <img style="height:400px ; margin:5px; padding:5px" class="img-fluid" src="@Url.Content("~/Images/Category/"+ Model.Pic)" alt="Card image cap">
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Categoryid" />
        <input style="border-radius:20px;" type="submit" value="Delete" class="btn btn-danger" /> |
        <a style="color: #eeb7c3" asp-controller="Categories" asp-action="Index">Back to List</a>
    </form>
</div>
