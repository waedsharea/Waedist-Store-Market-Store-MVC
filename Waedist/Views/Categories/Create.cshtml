@model Waedist.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}







<div class="card-body overflow-hidden">

    <p>

    </p>
    <div class="row mx-n4 ">
        <div style="width:66%;margin:auto; margin-top:80px  "  class="col-8 row-cols-8 p-1">
            <div style="height: 400px; " class=" card ">
                <div class="card-header">
                    <h5 class="mb-0">Craete Categorey</h5>
                </div>
                <div style="margin-bottom: 20px; margin-left: 437px; height: 0px; " class="nav nav-pills nav-pills-falcon flex-grow-1" role="tablist">
                    <a class="btn btn-sm active" asp-controller="Categories" asp-action="Index">Back to the List</a>
                </div>
                <div id="Edit" class="card-body bg-light pb-0">
                    <div class="collapse show" id="experience-form">
                        <form asp-action="Create" enctype="multipart/form-data" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                            <div class="col-9 col-sm-7 mb-3">
                                <label style="margin-right:70px" class="control-label" asp-for="Categoryname">Category Name</label>

                                <input style="width:535px" asp-for="Categoryname" class="form-control form-control-sm" type="text">
                            </div>

                            <div class="form-group">
                                <label for="img" class="control-label"></label>
                                <input type="file" accept="image/*" name="img" id="img" class="form-control" />
                            </div>

                            <div class="col-9 col-sm-7 offset-3">
                                <button style=" margin-left:270px; margin-top: 20px; background-color: #eeb0bc; border-color: #eeb0bc; border-radius: 20px; " class="btn btn-primary rounded-sm" type="submit" value="Create">Create</button>
                            </div>
                        </form>
                        <div class="border-dashed-bottom my-4"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>







