    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card">
                    <h2 class="card-title text-center">Registeration <a href=""></a></h2>
                    <div class="card-body py-md-4">
                        <form asp-controller="Authentication" asp-action="Register" method="post" enctype="multipart/form-data" _lpchecked="1">
                            <div class="form-header" style="margin-top:0">
                                <div class="form-group">
                                    <div class="avartar">
                                        <a href="#">
                                            <img src="/RegisterStatics/images/avartar.png" alt="">
                                        </a>
                                        <div class="avartar-picker">
                                            <input required accept="image/*" type="file" name="upload" id="upload" class="inputfile" data-multiple-caption="{count} files selected" multiple />
                                            <label for="upload">
                                                <span class="d-inline-block"><i class="zmdi zmdi-camera"></i>Choose Picture</span>


                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Fullname" type="text" class="form-control" id="name" placeholder="Full Name">
                                        <span asp-validation-for="Fullname" class="text-danger"></span>

                                    </div>
                                    @if (ViewBag.Register == 0)
                                    {
                                        <p id="msg" style="margin-left:15px;color:red">Email have been token by another acount !<span style="color:red"></span></p>
                                    }
                                    <div class="form-group">
                                        <input asp-for="Email" name="Email" type="email" class="form-control" id="email" placeholder="Email">
                                        <span asp-validation-for="Email" class="text-danger"></span>

                                    </div>

                                    <div class="form-group">
                                        <input asp-for="Phonenumber" type="text" class="form-control" id="name" placeholder="Mobile Number">
                                        <span asp-validation-for="Phonenumber" class="text-danger"></span>

                                    </div>
                                <div class="form-group">
                                        <input asp-for="Password" type="password" class="form-control" id="Pass1" placeholder="Password">
                                        <span asp-validation-for="Password" class="text-danger"></span>

                                    </div>
                                    @********************@



                                    <button type="submit" value="Register" class="btn btn-primary">Create Account</button>

                                    <div class="d-flex flex-row align-items-center justify-content-between">
                                        <a asp-action="Login">Already have an account? Login</a>

                                    </div>
                                </div>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

