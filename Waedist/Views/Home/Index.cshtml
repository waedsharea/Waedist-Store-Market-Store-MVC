@model Tuple<IEnumerable<Home>, IEnumerable<Aboutu>, IEnumerable<Category>, IEnumerable<Store>, IEnumerable<Testmoninal>, IEnumerable<Product>>



@{
    ViewData["Title"] = "Home Page";
    if (ViewBag.Adminid == null && ViewBag.UserId == null)
        Layout = "_HomeLayout";
    else
        Layout = "_LoggedInHomeLayout";


}
@foreach (var item in Model.Item1)
{

    <div class="hero-wrap js-fullheight" style="background-image:url('../Images/Home/@item.Tittlepic'); ">
        @*<img class=overlay style="width: 1520px; height: 775px; " src="@Url.Content("~/Images/Home/"+ item.Tittlepic)" />*@
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center">
                <h3 class="v">@item.Companyname @item.Description</h3>
                <h3 class="vr">Since - 1985</h3>
                <div class="col-md-11 ftco-animate text-center">
                    <h1>@item.Tittle @item.Headertext</h1>
                    <h2><span>@item.Description</span></h2>
                </div>
                <div class="mouse">
                    <a href="#" class="mouse-icon">
                        <div class="mouse-wheel"><span class="ion-ios-arrow-down"></span></div>
                    </a>
                </div>
            </div>
        </div>
    </div>
}



<section class="ftco-section ftco-product">
    <div class="container">
        <div class="row justify-content-center mb-3 pb-3">
            <div class="col-md-12 heading-section text-center ftco-animate">
                <h1 class="big">New Products</h1>
                <h2 class="mb-4">New Products</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="product-slider owl-carousel ftco-animate">
                    @foreach (var item in Model.Item6)
                    {
                        <div class="item">
                            <div class="product">
                                <a href="#" class="img-prod">
                                    <img class="img-fluid" style="width:300px; height:550px;" src="@Url.Content("~/Images/Products/"+ item.Pic)" alt="Colorlib Template">
                                    <span class="status">30%</span>
                                </a>
                                <div class="text pt-3 px-3">
                                    <h3><a href="#">@item.Productname</a></h3>
                                    <div class="d-flex">
                                        <div class="pricing">
                                            <p class="price"><span class="mr-2 price-dc"></span><span class="price-sale">$@item.Price</span></p>
                                        </div>
                                        <div class="rating">
                                            <a href="/Authentication/Login" style="font-weight:bold;color:darkgray" class="text-right">
                                                See All Products?

                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
@foreach (var item in Model.Item2)
{
    <section class="ftco-section ftco-no-pb ftco-no-pt bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-5 p-md-5 img img-2 d-flex justify-content-center align-items-center" style="background-image: url(1/HomePanelStatics/images/bg_2.jpg);">
                    <img style="width: 450px; height:800px" class=" img img-2 d-flex justify-content-center align-items-center" src="@Url.Content("~/Images/About/"+ item.Tittlepic)" />
                    @*<a href="https://vimeo.com/45830194" class="icon popup-vimeo d-flex justify-content-center align-items-center">
                            <span class="icon-play"></span>
                        </a>*@
                </div>
                <div class="col-md-7 py-5 wrap-about pb-md-5 ftco-animate">
                    <div class="heading-section-bold mb-5 mt-md-5">
                        <div class="ml-md-0">
                            <h2 class="mb-4">@item.Headline <br>@item.Text1 <br> <span>@item.Text2</span></h2>
                        </div>
                    </div>
                    <div class="pb-md-5">
                        <p>@item.Text3.</p>
                        <p>@item.Text4.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
}



