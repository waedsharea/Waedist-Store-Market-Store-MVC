@model Waedist.Models.Contactu

@{
    ViewData["Title"] = "Contactus";
    if (ViewBag.Adminid == null && ViewBag.UserId == null)
        Layout = "_HomeLayout";
    else
        Layout = "_LoggedInHomeLayout";}




<div class="hero-wrap hero-bread" style="background-image: url('/HomePanelStatics/images/bg_6.jpg');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-0 bread">Contact Us</h1>
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span>Contact</span></p>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section contact-section bg-light">
    <div class="container">
        <div class="row block-9">
            <div class="col-md-6 order-md-last d-flex">
                <form asp-controller="Home" asp-action="Contactus" class="bg-white p-5 contact-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <input asp-for="Name" name="Name" id="Name" type="text" class="form-control" placeholder="Your Name">
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <input asp-for="Email" name="Email" id="Email" type="text" class="form-control" placeholder="Your Email">
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <input asp-for="Subject" name="Subject" id="Subject" type="text" class="form-control" placeholder="Subject">
                        <span asp-validation-for="Subject" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <textarea asp-for="Message" name="Message" id="Message" cols="30" rows="7" class="form-control" placeholder="Message"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <input type="submit" value="Send" class="btn btn-primary py-3 px-5">
                    </div>
                </form>

            </div>


            <div class="col-md-6 d-flex">
                <div id="map" class="bg-white"></div>
            </div>
        </div>
        @foreach (var item in ViewBag.Home)
        {
            <div class="row d-flex mt-5 contact-info">
                <div class="w-100"></div>
                <div class="col-md-3 d-flex">
                    <div class="info bg-white p-4">
                        <p><span>Address:</span>@item.Address</p>
                    </div>
                </div>
                <div class="col-md-3 d-flex">
                    <div class="info bg-white p-4">
                        <p><span>Phone:</span> <a href="tel://1234567920">@item.Companyphone</a></p>
                    </div>
                </div>
                <div class="col-md-3 d-flex">
                    <div class="info bg-white p-4">
                        <p><span>Email:</span> <a href="mailto:info@yoursite.com">@item.Companyemail</a></p>
                    </div>
                </div>
                <div class="col-md-3 d-flex">
                    <div class="info bg-white p-4">
                        <p><span>Website</span> <a href="#">@(item.Companyname).com</a></p>
                    </div>
                </div>
            </div>
        }
    </div>
            
</section>









