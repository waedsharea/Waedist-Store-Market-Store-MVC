@model Waedist.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}

















<div class="card-body overflow-hidden">

    <p>

    </p>
    <div class="row mx-n4 ">
        <div style="width:66%;margin:auto; margin-top:80px  " class="col-8 row-cols-8 p-1">
            <div style="height: 500px; " class=" card ">
                <div class="card-header">
                    <h5 class="mb-0">Create Product</h5
                </div>
                <div style="margin-bottom:20px; margin-left:395px" class="nav nav-pills nav-pills-falcon flex-grow-1" role="tablist">
                    <a class="btn btn-sm active" asp-controller="Products" asp-action="Index">Back to the List</a>

                </div>

                <div id="Edit" class="card-body bg-light pb-0">
                    <div class="collapse show" id="experience-form">
                        <form asp-controller="Products" asp-action="Create" enctype="multipart/form-data" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Productsize" />
                            <input type="hidden" asp-for="Pic" />
                            <div class="col-9 col-sm-7 mb-3">
                                <label style="margin-right:70px" class="control-label" asp-for="Productname">Product Name</label>

                                <input style="width:530px" asp-for="Productname" class="form-control form-control-sm" type="text">
                            </div>
                            <div class="col-9 col-sm-7 mb-3">
                                <label style="margin-right:70px" class="control-label" asp-for="Price">Product Price</label>

                                <input style="width:530px" asp-for="Price" class="form-control form-control-sm" type="number">
                            </div>
                            <div class="col-9 col-sm-7 mb-3">
                                <label style="margin-right:70px" class="control-label" asp-for="Productvalue">Product Value</label>

                                <input style="width:530px" asp-for="Productvalue" class="form-control form-control-sm" type="number">
                            </div>

                            <div class="form-group">
                                <label for="img" class="control-label"></label>
                                <input type="file" accept="image/*" name="img" id="img" class="form-control" />
                            </div>

                            <div class="col-9 col-sm-7 offset-3">
                                <button style=" margin-left:250px; margin-top: 10px; background-color: #eeb0bc; border-color: #eeb0bc; border-radius: 20px; " class="btn btn-primary rounded-sm" type="submit" value="Create">Create</button>
                            </div>
                        </form>
                        <div class="border-dashed-bottom my-4"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>












